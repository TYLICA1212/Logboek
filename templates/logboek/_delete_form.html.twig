<form method="post" action="{{ path('logboek_delete', {'id': logboek.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ logboek.id) }}">
    {% if is_granted('ROLE_ADMIN') %}
    <button class="btn">Delete</button>
    {% endif %}
</form>
